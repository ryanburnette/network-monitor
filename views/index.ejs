<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>network-monitor</title>
    <link rel="stylesheet" href="/bulma.css" />
    <style>
      .navbar-item:is(:first-child) {
        padding-left: 0;
      }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <div class="navbar-item">
          <h1 class="has-text-weight-bold">network-monitor</h1>
        </div>
      </div>
    </nav>
    <section class="section">
      <div class="container">
        <table class="table is-bordered is-striped is-fullwidth">
          <thead>
            <tr>
              <th>name</th>
              <th>host</th>
              <th>alive</th>
              <th>time (ms)</th>
            </tr>
          </thead>
          <tbody>
            <% hosts.forEach(function(el) { %>
            <tr>
              <td><%= el.name %></td>
              <td><%= el.host %></td>
              <td><%= el.res.alive %></td>
              <td><%= el.res.time %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
  </body>
</html>
